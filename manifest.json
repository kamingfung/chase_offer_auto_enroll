{
    "manifest_version": 3,
    "name": "Simple Chase Offer Runner",
    "version": "1.0",
    "description": "Click the button in the popup to run the Chase offer script once on the current page.",
    "permissions": ["activeTab", "scripting", "notifications"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "128": "images/icon128.png"
    }
}
